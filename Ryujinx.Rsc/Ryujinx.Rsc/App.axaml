<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Ryujinx.Rsc"
             x:Class="Ryujinx.Rsc.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <Style Selector="Label">
			<Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="avares://Ryujinx.Rsc/Assets/Fonts/NotoSansJP-Regular.otf#Noto Sans JP"></Setter>
        </Style>
        <Style Selector="TextElement">
			<Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="avares://Ryujinx.Rsc/Assets/Fonts/NotoSansJP-Regular.otf#Noto Sans JP"></Setter>
        </Style>
        <Style Selector="TextBlock">
			<Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="avares://Ryujinx.Rsc/Assets/Fonts/NotoSansJP-Regular.otf#Noto Sans JP"></Setter>
        </Style>
        <Style Selector="TemplatedControl">
			<Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="avares://Ryujinx.Rsc/Assets/Fonts/NotoSansJP-Regular.otf#Noto Sans JP"></Setter>
        </Style>
    </Application.Styles>
</Application>
