<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Ryujinx.Rsc.Controls.VirtualButton">
	<UserControl.Resources>
		<Color x:Key="StickBackgroundColor">#98414141</Color>
	</UserControl.Resources>
	<UserControl.Styles>
		<Style Selector="Canvas > Ellipse:pointerover">
			<Setter Property="Fill" Value="Blue"/>
		</Style>
		<Style Selector="Canvas > Ellipse">
			<Setter Property="Fill" Value="{DynamicResource StickBackgroundColor}"/>
		</Style>
	</UserControl.Styles>
	<Grid>
		<Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50">
			<Ellipse Stroke="White" StrokeThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="50" Height="50"/>
		</Canvas>
		<Label Margin="0" Padding="0" x:Name="Key" IsHitTestVisible="False" Content="{Binding $parent[1].FaceLabel}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</UserControl>
