<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             ClipToBounds="False"
             x:Class="Ryujinx.Rsc.Controls.VirtualStick">
    <UserControl.Resources>
        <Color x:Key="StickBackgroundColor">#98414141</Color>
    </UserControl.Resources>
    <UserControl.Styles>
        <Style Selector="Ellipse.Circle">
            <Setter Property="Fill" Value="{DynamicResource StickBackgroundColor}"/>
        </Style>
    </UserControl.Styles>
    <Canvas ClipToBounds="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="120" Height="90" x:Name="Layout">
        <Ellipse Classes="Circle" Stroke="White" StrokeThickness="2" Width="75" Height="75" x:Name="Circle"
                />
        <Ellipse  Fill="Gray" Width="30" Height="30" x:Name="Thumb"/>
		<Button Background="Gray" MinWidth="30" MinHeight="30" CornerRadius="15" Width="30" Height="30" x:Name="Button"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0"  HorizontalAlignment="Left">
			<Label x:Name="StickLabel" Content="L" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Button>
    </Canvas>
</UserControl>
